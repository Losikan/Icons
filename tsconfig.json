{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
     "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["express-session"]
    
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  
}