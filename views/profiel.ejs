<%- include("partials/header.ejs") %>

<body>
        <header class="top-header">
        <nav class="sidebar">
            <div class="sidebar-header">
                <i class="ri-arrow-left-line sidebar-close"></i>
            </div>
            <ul class="sidebar-nav">
                <li><a href="/home">Home</a></li>
                <li><a href="/inventaris">Inventaris</a></li>
                <li><a href="/shop">Winkel</a></li>
                <li><a href="/friendslist">Vriendenlijst</a></li>
                <li><a href="/settings">Instellingen</a></li>
            </ul>
            <div class="sidebar-bottom">
                <div class="user-circle"></div>
                <span><a href="/index">Uitloggen</a></span>
            </div>
        </nav>
        <div class="overlay"></div>

        <i class="ri-menu-line"></i>
        <h1 class="logo"><a href="/home">ICONS</a></h1>

        <div class="nav-items-right">
            <div class="mode-toggle-right">
                <label class="switch">
                    <input type="checkbox" id="modeSwitch">
                    <span class="slider round">
                        <i class="ri-sun-line sun-icon"></i>
                        <i class="ri-moon-line moon-icon"></i>
                    </span>
                </label>
            </div>

            <div class="search-container">
                <i class="ri-search-2-line" id="search-icon"></i>
                <input type="text" class="search-input" placeholder="Zoeken...">
            </div>

            <i class="ri-account-circle-fill user"></i>
            <div class="account-card">
                <ul class="list">
                    <li class="element"><a href="/profiel" class="label"><i class="ri-account-box-2-fill"></i>Profiel</a></li>
                    <li class="element"><a href="/settings" class="label"><i class="ri-settings-5-fill"></i>Instellingen</a></li>
                    <div class="separator"></div>
                    <li class="element"><a href="/index" class="label"><i class="ri-logout-box-r-fill"></i>Uitloggen</a></li>
                </ul>
            </div>
        </div>
    </header>
    <main>
        <div class="profile-section">
            <div class="profile-pic">
                <img src="afbeeldingen/profiel.jpg" alt="Profielafbeelding" class="profile-image">
            </div>
            <div class="level">
                <i class="ri-gamepad-line"></i>
            </div>
        </div>
        
        <div class="tabs-container">
            <div class="tabs">
                <div class="tab-active">Showcase</div>
                <div class="tab">Statistieken</div>
            </div>
            
            <div class="tab-content">
                <div class="showcase-grid">
                   
                        <div class="showcase-item">
                            <img src="" alt="">
                            <div class="showcase-info">
                                <h3></h3>
                                <span class="price"><i class="ri-copper-diamond-line"></i> </span>
                            </div>
                        </div>
                    
                </div>
                
                <div class="stats-section">
                    <div class="stats-grid">
                        <div class="stats-item">
                            <span class="stats-label">K/D Ratio</span>
                            <span class="stats-value"></span>
                        </div>
                        <div class="stats-item">
                            <span class="stats-label">Totaal Kills</span>
                            <span class="stats-value"></span>
                        </div>
                        <div class="stats-item">
                            <span class="stats-label">Win Ratio</span>
                            <span class="stats-value"></span>
                        </div>
                        <div class="stats-item">
                            <span class="stats-label">Gespeelde Games</span>
                            <span class="stats-value"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include("partials/footer.ejs") %>
</body>
</html>