<%- include("partials/header.ejs") %>

<body>
    <div class="mode-toggle">
        <div class="mode-toggle-right">
            <label class="switch">
                <input type="checkbox" id="modeSwitch">
                <span class="slider round">
                    <i class="ri-sun-line sun-icon"></i>
                    <i class="ri-moon-line moon-icon"></i>
                </span>
            </label>
        </div>    </div>

    <main>
        <svg class="login_blob" viewBox="0 0 566 840" xmlns="http://www.w3.org/2000/svg">
            <mask id="mask0" mask-type="alpha">
                <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538 0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393 
                591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824 167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z"/>
            </mask>
        
            <g mask="url(#mask0)">
                <image id="backgroundImage" class="login_img" href="assets/images/fortnite-battle-royale-uhd-4k-wallpaper.jpg">
            </g>
        </svg>        
        <div class="login container grid">
            <div class="login_access">
                <h1 class="login_title">Nieuw Wachtwoord Instellen</h1>
                
                <% if (typeof error !== 'undefined') { %>
                    <div class="error-message"><%= error %></div>
                <% } %>

                <form action="/newpassword" method="POST">
                    <input type="hidden" name="token" value="<%= token %>">
                    
                    <div class="login_box">
                        <input type="password" name="password" required 
                            placeholder=" " class="login_input">
                        <label class="login_label">Nieuw Wachtwoord</label>
                    </div>
                    
                    <div class="login_box">
                        <input type="password" name="confirmPassword" required 
                            placeholder=" " class="login_input">
                        <label class="login_label">Bevestig Wachtwoord</label>
                    </div>

                    <button type="submit" class="login_button">Wijzig Wachtwoord</button>
                </form>
            </div>
        </div>
    </main>
</body>
<%- include("partials/footer.ejs") %>